{
  "manifest_version": 2,
  "name": "Google Scholar Capture",
  "version": "0.1",

  "description": "Initial version of plugin to capture academic data",
  "icons": {
    "48": "icons/ASU_image-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": {
      "19": "button/arc-19.png"
    },
    "browser_style": true,
    "default_title": "Academic Research Capture",
  },
}
